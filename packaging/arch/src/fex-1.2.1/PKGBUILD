pkgname=fex
pkgver=1.2.1
pkgrel=2
install=fex.install
pkgdesc="minimalistic TUI file explorer with vim integration"
arch=('x86_64')
license=('GPL3' 'Boost')
depends=('ncurses' 'vim')
makedepends=('gcc' 'make')
source=("${pkgname}-${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -C ../../../../
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -C ../../../../ DESTDIR="${pkgdir}" PREFIX=/usr install
}